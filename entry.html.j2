<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html lang='en'>
<meta http-equiv='Content-Language' content='en'>
<script type='text/javascript' src='jquery-3.3.1.min.js'></script>
<head>
<meta http-equiv='Content-Type' content='text/html; charset=UTF-8'>
<link rel="stylesheet" href="entry.css">
<script src="entry.js"></script></head>

<body>
  <form>
    <!--
      [key to track tourney]
      Pool name
      Pool date
      Location/time table
      Table entry field
      Power pools (default ULR?)
      Teams per pool (default 4)
      Pools (default teams / 4)
      Submit button
    -->
    <table><tbody>
      <tr>
        <td class='label'>Event Name:</td>
        <td><input type='text' name='name'></td>
      </tr>
      <tr>
        <td class='label'>Event Date:</td>
        <td><input type='date' name='date' onchange='onDateChange()'>&nbsp;Format:&nbsp;<select id='dateformats'></select></td>
      </tr>
      <tr>
        <td class='label'>Number of Teams Per Pool:</td>
        <td><input type='number' name='teamsperpool' min='3' step='1' value='4'></td>
      </tr>
      <tr>
        <td class='label'>Total Number of Pools:</td>
        <td><input type='number' name='numpools' min='0' step='1' value='0'>&nbsp;<span>(0 = total teams / teams per pool)</span></td>
      </tr>
      <tr>
        <td class='label'>Include Power Pools:</td>
        <td><input type='checkbox' name='includepowerpools' onClick=pptoggle(this)></td>
      </tr>
      <tr>
        <td class='label disabled powerpooltoggle'>Number of Power Pools:</td>
        <td><input class='powerpooltoggle' type='number' name='numpowerpools' min='0' max='2' step='1' value='0' disabled></td>
      </tr>
      <tr>
        <td class='label disabled powerpooltoggle'>Teams per Power Pool:</td>
        <td><input class='powerpooltoggle' type='number' name='teamsperpowerpool' min='3' max='4' value='3' disabled></td>
      </tr>
      <tr>
        <td class='label'>Avoid Same Club in Same Pool:</td>
        <td><input type='checkbox' name='avoidclub'></td>
      </tr>
      <tr>
        <td class='label'>Dates,<br>Times,<br>& Locations:</td>
        <td>
<table class='event'>

  <thead>
    <tr>
      <th colspan='2'></th>
      <th class='rvdate' colspan={{ times.length }}><input type='text' class='dynawidth' value='{{ date }}'></th>
    </tr>
    <tr>
      <th colspan='2'></th>
      {% for time in times %}
      <th class='rvtime'><input type='text' class='dynawidth' value='{{ time }}'></th>
      {% endfor %}
    </tr>
  </thead>

  <tbody>
  {% for venue in venues %}
    {% for court in venue.courts %}
      <tr>
      {% if loop.first %}
        <th class='rvvenue' rowspan={{ venue.courts.length }}><input type='text' class='dynawidth' value='{{ venue.name }}'></th>
      {% endif %}
      <th class='rvcourt'><input type='text' class='dynawidth' value='{{ court }}'></th>
      {% for time in times %}
        <td><input type='checkbox' checked></td>
      {% endfor %}
      </tr>
    {% endfor %}
  {% endfor %}
  </tbody>

</table>
        </td>
      </tr>

      <tr>
        <td class='label'>Paste Team List Here =></td>
        <td><textarea name='excel_data' placeholder='Paste Team List Here' cols='30' rows='2' onchange='onExcelPaste()'></textarea></td>
      </tr>

      <tr><td colspan='2'>
        <table class='matrix'>
          <thead></thead>
          <tbody></tbody>
        </table>
      </td></tr>

    </tbody></table>
    <br><input type="button" onclick="SendEntryDataToServer()" value="Generate Pools"/>
</form>
<div id='excel_table'></div>
</body>
